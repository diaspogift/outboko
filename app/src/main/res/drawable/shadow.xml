<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
