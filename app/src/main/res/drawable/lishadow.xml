<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
	        <shape android:shape="rectangle" >
	            <solid android:color="#00A0A0" />
	
	            <corners android:radius="10dp" />
	            
	        </shape>
	    </item>
	    <!-- background color -->
	    <item
	        android:bottom="1px"
	        android:left="1px"
	        android:right="1px"
	        android:top="1px">
	        <shape android:shape="rectangle" >
	            <solid android:color="#00A0A0" />
	
	
	            <corners android:radius="8dp" />
	        </shape>
	    </item>
	    <!-- over left shadow -->
	    <item>
	        <shape android:shape="rectangle" >
	            <gradient
	                android:angle="0"
	                android:centerColor="#00000000"
	                android:centerX="0.9"
	                android:endColor="#FF000000"
	                android:startColor="#00FFFF" />
	
	            <corners android:radius="8dp" />
	        </shape>
	    </item>
	    <!-- over right shadow -->
	    <item>
	        <shape android:shape="rectangle" >
	            <gradient
	                android:angle="-45"
	                android:centerColor="#00000000"
	                android:centerX="0.9"
	                android:endColor="#99000000"
	                android:startColor="#00A0A0" />
	
	            <corners android:radius="8dp" />
	        </shape>
	    </item>
	    <!-- over top shadow -->
	    <item>
	        <shape android:shape="rectangle" >
	            <gradient
	                android:angle="-45"
	                android:centerColor="#00000000"
	                android:centerY="0.9"
	                android:endColor="#99000000"
	                android:startColor="#00A0A0"
	               />
	
	            <corners android:radius="8dp" />
	        </shape>
	    </item>
	    <!-- over bottom shadow -->
	    <item>
	        <shape android:shape="rectangle" >
	            <gradient
	                android:angle="45"
	                android:centerColor="#00000000"
	                android:centerY="0.9"
	                android:endColor="#00A0A0"
	                android:startColor="#99000000"
	                android:type="linear" />
	
	            <corners android:radius="8dp" />
	        </shape>
	    </item>

</layer-list>
